<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activity.MapsActivity">

    <View
        android:id="@+id/transparentWhiteBgMaps"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:background="#F2FFFFFF"/>

    <ProgressBar
        android:id="@+id/mapsProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:contentDescription="center marker"
        android:src="@drawable/ic_marker" />

    <LinearLayout
        android:id="@+id/btnLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dim_10_dp"
        android:layout_marginTop="@dimen/dim_10_dp"
        android:layout_marginEnd="@dimen/dim_10_dp"
        android:layout_marginBottom="@dimen/dim_10_dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnOk"
            style="@style/MyButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_check"
            android:padding="10dp"
            android:layout_marginHorizontal="64dp"
            android:paddingBottom="@dimen/dim_10_dp"
            android:text="Confirm Location"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_20_dp" />
    </LinearLayout>
</RelativeLayout>