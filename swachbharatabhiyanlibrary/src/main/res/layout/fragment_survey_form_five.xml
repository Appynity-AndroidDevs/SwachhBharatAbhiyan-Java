<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_survey"
    tools:context=".fragment.SurveyFormFiveFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/li_insurance_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="@dimen/dim_10_dp">

                <ImageView
                    android:id="@+id/img_insurance"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:src="@drawable/life_insurance"
                    android:layout_gravity="center_vertical|center"
                    android:fitsSystemWindows="true"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/dim_8_dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/rl_insurance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str_que_do_have_insurance"
                            android:padding="5dp"
                            android:textSize="16sp"
                            android:textColor="@color/white"
                            android:layout_alignParentStart="true"
                            android:fontFamily="@font/font_bold"/>
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/li_insurance_cb_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatCheckBox
                            android:id="@+id/cb_life_insurance"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:checked="false"
                            android:padding="2dp"
                            android:layout_marginEnd="@dimen/dim_5_dp"
                            android:buttonTint="@color/white"
                            android:textSize="12sp"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/font_medium"
                            android:textColor="@color/white"
                            android:text="@string/str_life_insurance"/>

                        <androidx.appcompat.widget.AppCompatCheckBox
                            android:id="@+id/cb_medical_insurance"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:padding="2dp"
                            android:checked="false"
                            android:layout_marginEnd="@dimen/dim_5_dp"
                            android:buttonTint="@color/white"
                            android:textSize="12sp"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/font_medium"
                            android:textColor="@color/white"
                            android:text="@string/str_medical_insurance"/>

                        <androidx.appcompat.widget.AppCompatCheckBox
                            android:id="@+id/cb_both_insurance"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:checked="false"
                            android:padding="2dp"
                            android:buttonTint="@color/white"
                            android:textSize="12sp"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/font_medium"
                            android:textColor="@color/white"
                            android:text="@string/str_both"/>


                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/li_insurance_type_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/dim_5_dp"
                android:visibility="visible"
                android:layout_marginVertical="@dimen/dim_10_dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_que_which_insured"
                    android:padding="5dp"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:layout_gravity="start"
                    android:fontFamily="@font/font_bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/dim_8_dp"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/cb_gov_insurance_type"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:checked="false"
                        android:layout_marginEnd="@dimen/dim_5_dp"
                        android:buttonTint="@color/white"
                        android:layout_gravity="center_vertical"
                        android:textSize="12sp"
                        android:fontFamily="@font/font_medium"
                        android:textColor="@color/white"
                        android:text="@string/str_government"/>

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/cb_private_insurance_type"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:checked="false"
                        android:layout_marginEnd="@dimen/dim_5_dp"
                        android:layout_gravity="center_vertical"
                        android:buttonTint="@color/white"
                        android:textSize="12sp"
                        android:fontFamily="@font/font_medium"
                        android:textColor="@color/white"
                        android:text="@string/str_private"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/li_ayushman_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/dim_5_dp"
                android:visibility="visible"
                android:layout_marginVertical="@dimen/dim_10_dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_que_ayushman_bharat"
                    android:padding="5dp"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:layout_gravity="start"
                    android:fontFamily="@font/font_bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/dim_8_dp"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/cb_yes_ayushman"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:checked="false"
                        android:layout_marginEnd="@dimen/dim_5_dp"
                        android:buttonTint="@color/white"
                        android:layout_gravity="center_vertical"
                        android:textSize="12sp"
                        android:fontFamily="@font/font_medium"
                        android:textColor="@color/white"
                        android:text="@string/str_yes"/>

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/cb_no_ayushman"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:checked="false"
                        android:layout_marginEnd="@dimen/dim_5_dp"
                        android:buttonTint="@color/white"
                        android:layout_gravity="center_vertical"
                        android:textSize="12sp"
                        android:fontFamily="@font/font_medium"
                        android:textColor="@color/white"
                        android:text="@string/str_no"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/li_booster_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/dim_5_dp"
                android:visibility="visible"
                android:layout_marginVertical="@dimen/dim_10_dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_que_booster_shot"
                    android:padding="5dp"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:layout_gravity="start"
                    android:fontFamily="@font/font_bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/dim_8_dp"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/cb_yes_booster"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:checked="false"
                        android:layout_marginEnd="@dimen/dim_5_dp"
                        android:buttonTint="@color/white"
                        android:layout_gravity="center_vertical"
                        android:textSize="12sp"
                        android:fontFamily="@font/font_medium"
                        android:textColor="@color/white"
                        android:text="@string/str_yes"/>

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/cb_no_booster"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:checked="false"
                        android:layout_marginEnd="@dimen/dim_5_dp"
                        android:buttonTint="@color/white"
                        android:layout_gravity="center_vertical"
                        android:textSize="12sp"
                        android:fontFamily="@font/font_medium"
                        android:textColor="@color/white"
                        android:text="@string/str_no"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/li_divyang_box"
                android:layout_width="match_parent"
                android:layout_marginVertical="@dimen/dim_10_dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/li_divyang"
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/dim_8_dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_que_divyang"
                        android:padding="5dp"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:layout_gravity="start"
                        android:fontFamily="@font/font_bold"/>

                    <LinearLayout
                        android:id="@+id/li_divyang_cb_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatCheckBox
                            android:id="@+id/cb_yes_divyang"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:checked="false"
                            android:padding="2dp"
                            android:layout_marginEnd="@dimen/dim_5_dp"
                            android:buttonTint="@color/white"
                            android:layout_gravity="center_vertical"
                            android:textSize="12sp"
                            android:fontFamily="@font/font_medium"
                            android:textColor="@color/white"
                            android:text="@string/str_yes"/>

                        <androidx.appcompat.widget.AppCompatCheckBox
                            android:id="@+id/cb_no_divyang"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:padding="2dp"
                            android:checked="false"
                            android:layout_marginEnd="@dimen/dim_5_dp"
                            android:buttonTint="@color/white"
                            android:layout_gravity="center_vertical"
                            android:textSize="12sp"
                            android:fontFamily="@font/font_medium"
                            android:textColor="@color/white"
                            android:text="@string/str_no"/>

                    </LinearLayout>

                </LinearLayout>
                <ImageView
                    android:id="@+id/img_divyang"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:src="@drawable/disable"
                    android:layout_gravity="center_vertical|center"
                    android:fitsSystemWindows="true"/>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>