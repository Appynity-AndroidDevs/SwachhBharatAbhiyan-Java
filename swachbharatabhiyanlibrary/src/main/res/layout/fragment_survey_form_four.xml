<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_survey"
    tools:context=".fragment.SurveyFormFourFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/li_vote_box"
                android:layout_width="match_parent"
                android:layout_marginVertical="@dimen/dim_5_dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/li_vote"
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/dim_8_dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_que_total_vote"
                        android:padding="5dp"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:layout_gravity="start"
                        android:fontFamily="@font/font_bold"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_gravity="start|center_vertical"
                        android:padding="@dimen/dim_5_dp">
                        <ImageView
                            android:id="@+id/img_minus_vote"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_circle_minus"
                            android:padding="@dimen/dim_5_dp"
                            android:fitsSystemWindows="true"/>
                        <TextView
                            android:id="@+id/txt_num_vote"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/colorSurveyTextBlue"
                            android:fontFamily="@font/font_medium"
                            android:textSize="@dimen/dim_14_sp"
                            android:text="0"
                            android:background="@drawable/solid_white_rectangle_survey"
                            android:padding="@dimen/dim_5_dp"/>
                        <ImageView
                            android:id="@+id/img_plus_vote"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_circle_plus"
                            android:padding="@dimen/dim_5_dp"
                            android:fitsSystemWindows="true"/>

                    </LinearLayout>

                </LinearLayout>
                <ImageView
                    android:id="@+id/img_vote"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ballot"
                    android:layout_gravity="center_vertical|center"
                    android:fitsSystemWindows="true"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/li_social_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="@dimen/dim_10_dp">

                <ImageView
                    android:id="@+id/img_social"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:src="@drawable/social_media"
                    android:layout_gravity="center_vertical|center"
                    android:fitsSystemWindows="true"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/dim_8_dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/rl_social"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str_que_which_social"
                            android:padding="5dp"
                            android:textSize="16sp"
                            android:textColor="@color/white"
                            android:layout_alignParentStart="true"
                            android:fontFamily="@font/font_bold"/>
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/li_social_cb_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatCheckBox
                            android:id="@+id/cb_fb_social"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:checked="false"
                            android:padding="2dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="@dimen/dim_5_dp"
                            android:buttonTint="@color/white"
                            android:textSize="12sp"
                            android:fontFamily="@font/font_medium"
                            android:textColor="@color/white"
                            android:text="@string/str_facebook"/>

                        <androidx.appcompat.widget.AppCompatCheckBox
                            android:id="@+id/cb_twitter_social"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:padding="2dp"
                            android:checked="false"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="@dimen/dim_5_dp"
                            android:buttonTint="@color/white"
                            android:textSize="12sp"
                            android:fontFamily="@font/font_medium"
                            android:textColor="@color/white"
                            android:text="@string/str_twitter"/>

                        <androidx.appcompat.widget.AppCompatCheckBox
                            android:id="@+id/cb_instagram_social"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:checked="false"
                            android:layout_gravity="center_vertical"
                            android:padding="2dp"
                            android:buttonTint="@color/white"
                            android:textSize="12sp"
                            android:fontFamily="@font/font_medium"
                            android:textColor="@color/white"
                            android:text="@string/str_instagram"/>


                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/li_social_cb_two"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatCheckBox
                            android:id="@+id/cb_whatsapp_social"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:checked="false"
                            android:padding="2dp"
                            android:layout_marginEnd="@dimen/dim_5_dp"
                            android:buttonTint="@color/white"
                            android:textSize="12sp"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/font_medium"
                            android:textColor="@color/white"
                            android:text="@string/str_whatsapp"/>

                        <androidx.appcompat.widget.AppCompatCheckBox
                            android:id="@+id/cb_linkedin_social"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:padding="2dp"
                            android:checked="false"
                            android:layout_marginEnd="@dimen/dim_5_dp"
                            android:buttonTint="@color/white"
                            android:textSize="12sp"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/font_medium"
                            android:textColor="@color/white"
                            android:text="@string/str_linkedin"/>

                        <androidx.appcompat.widget.AppCompatCheckBox
                            android:id="@+id/cb_snapchat_social"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:checked="false"
                            android:padding="2dp"
                            android:buttonTint="@color/white"
                            android:textSize="12sp"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/font_medium"
                            android:textColor="@color/white"
                            android:text="@string/str_snapchat"/>


                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/li_social_cb_three"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatCheckBox
                            android:id="@+id/cb_other_social"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:checked="false"
                            android:padding="2dp"
                            android:layout_marginEnd="@dimen/dim_5_dp"
                            android:buttonTint="@color/white"
                            android:textSize="12sp"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/font_medium"
                            android:textColor="@color/white"
                            android:text="@string/str_other"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/li_shopping_box"
                android:layout_width="match_parent"
                android:layout_marginVertical="@dimen/dim_10_dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/li_shopping"
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/dim_8_dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_que_shopping_app"
                        android:padding="5dp"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:layout_gravity="start"
                        android:fontFamily="@font/font_bold"/>

                    <LinearLayout
                        android:id="@+id/li_shopping_cb_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatCheckBox
                            android:id="@+id/cb_amazon_shopping"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:checked="false"
                            android:padding="2dp"
                            android:layout_marginEnd="@dimen/dim_5_dp"
                            android:layout_gravity="center_vertical"
                            android:buttonTint="@color/white"
                            android:textSize="12sp"
                            android:fontFamily="@font/font_medium"
                            android:textColor="@color/white"
                            android:text="@string/str_amazon"/>

                        <androidx.appcompat.widget.AppCompatCheckBox
                            android:id="@+id/cb_flipkart"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:padding="2dp"
                            android:checked="false"
                            android:layout_marginEnd="@dimen/dim_5_dp"
                            android:buttonTint="@color/white"
                            android:textSize="12sp"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/font_medium"
                            android:textColor="@color/white"
                            android:text="@string/str_flipkart"/>

                        <androidx.appcompat.widget.AppCompatCheckBox
                            android:id="@+id/cb_nykaa_shopping"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:checked="false"
                            android:padding="2dp"
                            android:buttonTint="@color/white"
                            android:textSize="12sp"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/font_medium"
                            android:textColor="@color/white"
                            android:text="@string/str_nykka"/>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/li_shopping_cb_two"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatCheckBox
                            android:id="@+id/cb_tata_cliq_shopping"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:checked="false"
                            android:padding="2dp"
                            android:layout_marginEnd="@dimen/dim_5_dp"
                            android:buttonTint="@color/white"
                            android:textSize="12sp"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/font_medium"
                            android:textColor="@color/white"
                            android:text="@string/str_tata_cliq"/>

                        <androidx.appcompat.widget.AppCompatCheckBox
                            android:id="@+id/cb_snapdeal_shopping"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:padding="2dp"
                            android:checked="false"
                            android:layout_marginEnd="@dimen/dim_5_dp"
                            android:buttonTint="@color/white"
                            android:textSize="12sp"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/font_medium"
                            android:textColor="@color/white"
                            android:text="@string/str_snapdeal"/>

                        <androidx.appcompat.widget.AppCompatCheckBox
                            android:id="@+id/cb_other_shopping"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:checked="false"
                            android:padding="2dp"
                            android:buttonTint="@color/white"
                            android:textSize="12sp"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/font_medium"
                            android:textColor="@color/white"
                            android:text="@string/str_other"/>


                    </LinearLayout>

                </LinearLayout>
                <ImageView
                    android:id="@+id/img_shopping"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:src="@drawable/online_shop"
                    android:layout_gravity="center_vertical|center"
                    android:fitsSystemWindows="true"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/li_online_payment_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="@dimen/dim_10_dp">

                <ImageView
                    android:id="@+id/img_online_payment"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cashless_payment"
                    android:layout_gravity="center_vertical|center"
                    android:fitsSystemWindows="true"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/dim_8_dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/rl_online_payment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str_que_which_online_payment"
                            android:padding="5dp"
                            android:textSize="16sp"
                            android:textColor="@color/white"
                            android:layout_alignParentStart="true"
                            android:fontFamily="@font/font_bold"/>
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/li_online_payment_cb_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatCheckBox
                            android:id="@+id/cb_bhim_online_payment"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:checked="false"
                            android:padding="2dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="@dimen/dim_5_dp"
                            android:buttonTint="@color/white"
                            android:textSize="12sp"
                            android:fontFamily="@font/font_medium"
                            android:textColor="@color/white"
                            android:text="@string/str_bhim"/>

                        <androidx.appcompat.widget.AppCompatCheckBox
                            android:id="@+id/cb_paytm_online_payment"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:padding="2dp"
                            android:checked="false"
                            android:layout_marginEnd="@dimen/dim_5_dp"
                            android:buttonTint="@color/white"
                            android:textSize="12sp"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/font_medium"
                            android:textColor="@color/white"
                            android:text="@string/str_paytm"/>

                        <androidx.appcompat.widget.AppCompatCheckBox
                            android:id="@+id/cb_phone_pe_online_payment"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:checked="false"
                            android:padding="2dp"
                            android:layout_gravity="center_vertical"
                            android:buttonTint="@color/white"
                            android:textSize="12sp"
                            android:fontFamily="@font/font_medium"
                            android:textColor="@color/white"
                            android:text="@string/str_phonepe"/>


                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/li_online_payment_cb_two"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatCheckBox
                            android:id="@+id/cb_gpay_online_payment"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:checked="false"
                            android:padding="2dp"
                            android:layout_marginEnd="@dimen/dim_5_dp"
                            android:layout_gravity="center_vertical"
                            android:buttonTint="@color/white"
                            android:textSize="12sp"
                            android:fontFamily="@font/font_medium"
                            android:textColor="@color/white"
                            android:text="@string/str_google_pay"/>

                        <androidx.appcompat.widget.AppCompatCheckBox
                            android:id="@+id/cb_banking_online_payment"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:padding="2dp"
                            android:checked="false"
                            android:layout_marginEnd="@dimen/dim_5_dp"
                            android:buttonTint="@color/white"
                            android:textSize="12sp"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/font_medium"
                            android:textColor="@color/white"
                            android:text="@string/str_personal_banking"/>

                        <androidx.appcompat.widget.AppCompatCheckBox
                            android:id="@+id/cb_other_online_payment"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:checked="false"
                            android:padding="2dp"
                            android:layout_gravity="center_vertical"
                            android:buttonTint="@color/white"
                            android:textSize="12sp"
                            android:fontFamily="@font/font_medium"
                            android:textColor="@color/white"
                            android:text="@string/str_other"/>


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>