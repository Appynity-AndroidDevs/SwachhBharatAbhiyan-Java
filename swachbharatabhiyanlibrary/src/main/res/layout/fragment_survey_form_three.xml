<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_survey"
    tools:context=".fragment.SurveyFormThreeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
            android:id="@+id/li_total_family_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="@dimen/dim_5_dp">

            <ImageView
                android:id="@+id/img_total_family"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:src="@drawable/grandparents"
                android:layout_gravity="center_vertical|center"
                android:fitsSystemWindows="true"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/dim_8_dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/rl_total_family"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:paddingVertical="@dimen/dim_5_dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total No. Of Members"
                        android:padding="5dp"
                        android:textSize="16sp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/white"
                        android:fontFamily="@font/font_bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(Family &amp; Dependents)"
                        android:textSize="10sp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/white"
                        android:fontFamily="@font/font_bold"/>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Adults"
                        android:padding="5dp"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:layout_centerVertical="true"
                        android:layout_gravity="start"
                        android:layout_alignParentStart="true"
                        android:fontFamily="@font/font_medium"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/dim_5_dp">
                        <ImageView
                            android:id="@+id/img_minus_adult"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_circle_minus"
                            android:padding="@dimen/dim_5_dp"
                            android:fitsSystemWindows="true"/>
                        <TextView
                            android:id="@+id/txt_num_adult"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/colorSurveyTextGreen"
                            android:fontFamily="@font/font_medium"
                            android:textSize="@dimen/dim_14_sp"
                            android:background="@drawable/solid_white_rectangle_survey"
                            android:padding="@dimen/dim_5_dp"/>
                        <ImageView
                            android:id="@+id/img_plus_adult"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_circle_plus"
                            android:padding="@dimen/dim_5_dp"
                            android:fitsSystemWindows="true"/>

                    </LinearLayout>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Children"
                        android:padding="5dp"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:layout_centerVertical="true"
                        android:layout_gravity="start"
                        android:layout_alignParentStart="true"
                        android:fontFamily="@font/font_medium"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/dim_5_dp">
                        <ImageView
                            android:id="@+id/img_child_minus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_circle_minus"
                            android:padding="@dimen/dim_5_dp"
                            android:fitsSystemWindows="true"/>
                        <TextView
                            android:id="@+id/txt_num_child"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/colorSurveyTextGreen"
                            android:fontFamily="@font/font_medium"
                            android:textSize="@dimen/dim_14_sp"
                            android:background="@drawable/solid_white_rectangle_survey"
                            android:padding="@dimen/dim_5_dp"/>
                        <ImageView
                            android:id="@+id/img_child_plus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_circle_plus"
                            android:padding="@dimen/dim_5_dp"
                            android:fitsSystemWindows="true"/>

                    </LinearLayout>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Senior Citizen"
                        android:padding="5dp"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:layout_centerVertical="true"
                        android:layout_gravity="start"
                        android:layout_alignParentStart="true"
                        android:fontFamily="@font/font_medium"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/dim_5_dp">
                        <ImageView
                            android:id="@+id/img_minus_citizen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_circle_minus"
                            android:padding="@dimen/dim_5_dp"
                            android:fitsSystemWindows="true"/>
                        <TextView
                            android:id="@+id/txt_num_citizen"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/colorSurveyTextGreen"
                            android:fontFamily="@font/font_medium"
                            android:textSize="@dimen/dim_14_sp"
                            android:background="@drawable/solid_white_rectangle_survey"
                            android:padding="@dimen/dim_5_dp"/>
                        <ImageView
                            android:id="@+id/img_plus_citizen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_circle_plus"
                            android:padding="@dimen/dim_5_dp"
                            android:fitsSystemWindows="true"/>

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

            <LinearLayout
                android:id="@+id/li_business"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/dim_5_dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Is Any Of Your Family Member is willing to start The Business?"
                    android:padding="5dp"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:layout_gravity="start"
                    android:fontFamily="@font/font_bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/dim_8_dp"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/cb_business_yes"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:layout_marginEnd="@dimen/dim_5_dp"
                        android:buttonTint="@color/white"
                        android:textSize="12sp"
                        android:checked="false"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/font_medium"
                        android:textColor="@color/white"
                        android:text="Yes"/>

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/cb_business_no"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:checked="false"
                        android:layout_marginEnd="@dimen/dim_5_dp"
                        android:buttonTint="@color/white"
                        android:textSize="12sp"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/font_medium"
                        android:textColor="@color/white"
                        android:text="No"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/li_business_available"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/dim_5_dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="If Yes Then Resources Available To Start The?"
                    android:padding="5dp"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:layout_gravity="start"
                    android:fontFamily="@font/font_bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/dim_8_dp"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/cb_land_available"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:checked="false"
                        android:layout_marginEnd="@dimen/dim_5_dp"
                        android:buttonTint="@color/white"
                        android:textSize="12sp"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/font_medium"
                        android:textColor="@color/white"
                        android:text="Land"/>

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/cb_shop_available"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:checked="false"
                        android:layout_marginEnd="@dimen/dim_5_dp"
                        android:buttonTint="@color/white"
                        android:textSize="12sp"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/font_medium"
                        android:textColor="@color/white"
                        android:text="Shop"/>

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/cb_other_available"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:checked="false"
                        android:layout_marginEnd="@dimen/dim_5_dp"
                        android:buttonTint="@color/white"
                        android:textSize="12sp"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/font_medium"
                        android:textColor="@color/white"
                        android:text="Other"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/li_member_other_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/dim_5_dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Any Of Your Family Members Are Relocated To Other Cities For Job/Business Or Other Purpose."
                    android:padding="5dp"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:layout_gravity="start"
                    android:fontFamily="@font/font_bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/dim_8_dp"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/cb_yes_member_other_city"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:checked="false"
                        android:layout_marginEnd="@dimen/dim_5_dp"
                        android:buttonTint="@color/white"
                        android:textSize="12sp"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/font_medium"
                        android:textColor="@color/white"
                        android:text="Yes"/>

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/cb_no_member_other_city"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:checked="false"
                        android:layout_marginEnd="@dimen/dim_5_dp"
                        android:buttonTint="@color/white"
                        android:textSize="12sp"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/font_medium"
                        android:textColor="@color/white"
                        android:text="No"/>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/li_vehicle_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="@dimen/dim_5_dp">

                <ImageView
                    android:id="@+id/img_vehicle"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:src="@drawable/car"
                    android:layout_gravity="center_vertical|center"
                    android:fitsSystemWindows="true"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/dim_8_dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="6"
                            android:layout_height="wrap_content"
                            android:text="Number Of Vehicles"
                            android:padding="5dp"
                            android:textSize="16sp"
                            android:textColor="@color/white"
                            android:layout_centerVertical="true"
                            android:layout_gravity="start|center_vertical"
                            android:layout_alignParentStart="true"
                            android:gravity="start"
                            android:fontFamily="@font/font_bold"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="7"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_gravity="end|center_vertical"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:padding="@dimen/dim_5_dp">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_circle_minus"
                                android:padding="@dimen/dim_5_dp"
                                android:visibility="invisible"
                                android:fitsSystemWindows="true"/>
                            <TextView
                                android:id="@+id/txt_num_total_vehicle"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textColor="@color/colorSurveyTextGreen"
                                android:fontFamily="@font/font_medium"
                                android:textSize="@dimen/dim_14_sp"
                                android:text="0"
                                android:background="@drawable/solid_white_rectangle_survey"
                                android:padding="@dimen/dim_5_dp"/>
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_circle_plus"
                                android:padding="@dimen/dim_5_dp"
                                android:visibility="invisible"
                                android:fitsSystemWindows="true"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="6"
                            android:layout_height="wrap_content"
                            android:text="Two Wheeler"
                            android:padding="5dp"
                            android:textSize="12sp"
                            android:textColor="@color/white"
                            android:layout_centerVertical="true"
                            android:layout_gravity="start|center_vertical"
                            android:gravity="start"
                            android:layout_alignParentStart="true"
                            android:fontFamily="@font/font_medium"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="7"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_gravity="end|center_vertical"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:padding="@dimen/dim_5_dp">
                            <ImageView
                                android:id="@+id/img_minus_two_wheeler"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_circle_minus"
                                android:padding="@dimen/dim_5_dp"
                                android:fitsSystemWindows="true"/>
                            <TextView
                                android:id="@+id/txt_num_two_wheeler"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textColor="@color/colorSurveyTextGreen"
                                android:fontFamily="@font/font_medium"
                                android:textSize="@dimen/dim_14_sp"
                                android:text="0"
                                android:background="@drawable/solid_white_rectangle_survey"
                                android:padding="@dimen/dim_5_dp"/>
                            <ImageView
                                android:id="@+id/img_plus_two_wheeler"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_circle_plus"
                                android:padding="@dimen/dim_5_dp"
                                android:fitsSystemWindows="true"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="6"
                            android:layout_height="wrap_content"
                            android:text="Four Wheeler"
                            android:padding="5dp"
                            android:textSize="12sp"
                            android:textColor="@color/white"
                            android:layout_centerVertical="true"
                            android:layout_gravity="start|center_vertical"
                            android:gravity="start"
                            android:layout_alignParentStart="true"
                            android:fontFamily="@font/font_medium"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="7"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="end|center_vertical"
                            android:gravity="center"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:padding="@dimen/dim_5_dp">
                            <ImageView
                                android:id="@+id/img_minus_four_wheeler"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_circle_minus"
                                android:padding="@dimen/dim_5_dp"
                                android:fitsSystemWindows="true"/>
                            <TextView
                                android:id="@+id/txt_num_four_wheeler"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textColor="@color/colorSurveyTextGreen"
                                android:fontFamily="@font/font_medium"
                                android:textSize="@dimen/dim_14_sp"
                                android:text="0"
                                android:background="@drawable/solid_white_rectangle_survey"
                                android:padding="@dimen/dim_5_dp"/>
                            <ImageView
                                android:id="@+id/img_plus_four_wheeler"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_circle_plus"
                                android:padding="@dimen/dim_5_dp"
                                android:fitsSystemWindows="true"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>