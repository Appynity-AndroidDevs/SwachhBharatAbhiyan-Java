<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_survey"
    android:orientation="vertical"
    tools:context=".fragment.SurveyFormTwoFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/li_certificate_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="@dimen/dim_5_dp">

                <ImageView
                    android:id="@+id/img_certificate"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:src="@drawable/certificate"
                    android:layout_gravity="center_vertical|center"
                    android:fitsSystemWindows="true"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/dim_8_dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/rl_certificate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str_heading_qualification"
                            android:padding="5dp"
                            android:textSize="16sp"
                            android:textColor="@color/white"
                            android:layout_alignParentEnd="true"
                            android:fontFamily="@font/font_bold"/>
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/li_certificate_cb"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatCheckBox
                            android:id="@+id/cb_un_graduate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:checked="false"
                            android:padding="2dp"
                            android:layout_marginEnd="@dimen/dim_5_dp"
                            android:buttonTint="@color/white"
                            android:textSize="12sp"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/font_medium"
                            android:textColor="@color/white"
                            android:text="@string/str_ug"/>

                        <androidx.appcompat.widget.AppCompatCheckBox
                            android:id="@+id/cb_graduate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:padding="2dp"
                            android:checked="false"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="@dimen/dim_5_dp"
                            android:buttonTint="@color/white"
                            android:textSize="12sp"
                            android:fontFamily="@font/font_medium"
                            android:textColor="@color/white"
                            android:text="@string/str_graduate"/>

                        <androidx.appcompat.widget.AppCompatCheckBox
                            android:id="@+id/cb_pst_graduate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:checked="false"
                            android:padding="2dp"
                            android:layout_gravity="center_vertical"
                            android:buttonTint="@color/white"
                            android:textSize="12sp"
                            android:fontFamily="@font/font_medium"
                            android:textColor="@color/white"
                            android:text="@string/str_pg"/>


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/li_occupation_box"
                android:layout_below="@id/li_certificate_box"
                android:layout_width="match_parent"
                android:layout_marginVertical="@dimen/dim_5_dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/li_occupation"
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/dim_8_dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_heading_occupation"
                        android:padding="5dp"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:layout_gravity="start"
                        android:fontFamily="@font/font_bold"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="@dimen/dim_8_dp"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatCheckBox
                            android:id="@+id/cb_service_occupation"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:checked="false"
                            android:layout_marginEnd="@dimen/dim_5_dp"
                            android:buttonTint="@color/white"
                            android:textSize="12sp"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/font_medium"
                            android:textColor="@color/white"
                            android:text="@string/str_service"/>

                        <androidx.appcompat.widget.AppCompatCheckBox
                            android:id="@+id/cb_business_occupation"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:checked="false"
                            android:layout_marginEnd="@dimen/dim_5_dp"
                            android:layout_gravity="center_vertical"
                            android:buttonTint="@color/white"
                            android:textSize="12sp"
                            android:fontFamily="@font/font_medium"
                            android:textColor="@color/white"
                            android:text="@string/str_business"/>

                        <androidx.appcompat.widget.AppCompatCheckBox
                            android:id="@+id/cb_professional_occupation"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:checked="false"
                            android:fontFamily="@font/font_medium"
                            android:layout_marginEnd="@dimen/dim_5_dp"
                            android:buttonTint="@color/white"
                            android:textSize="12sp"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/white"
                            android:text="@string/str_professional"/>

                    </LinearLayout>

                </LinearLayout>
                <ImageView
                    android:id="@+id/img_occupation"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:src="@drawable/employment"
                    android:layout_gravity="center_vertical|center"
                    android:fitsSystemWindows="true"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/li_marital_status_box"
                android:layout_below="@id/li_occupation_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="@dimen/dim_5_dp">

                <ImageView
                    android:id="@+id/img_marital_status"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:src="@drawable/rings"
                    android:layout_gravity="center_vertical|center"
                    android:fitsSystemWindows="true"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/dim_8_dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/rl_marital_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str_heading_marital_status"
                            android:padding="5dp"
                            android:textSize="16sp"
                            android:textColor="@color/white"
                            android:layout_alignParentEnd="true"
                            android:fontFamily="@font/font_bold"/>
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/li_marital_status_cb"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatCheckBox
                            android:id="@+id/cb_married"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:checked="false"
                            android:padding="2dp"
                            android:layout_marginEnd="@dimen/dim_5_dp"
                            android:buttonTint="@color/white"
                            android:textSize="12sp"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/font_medium"
                            android:textColor="@color/white"
                            android:text="@string/str_married"/>

                        <androidx.appcompat.widget.AppCompatCheckBox
                            android:id="@+id/cb_unmarried"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:padding="2dp"
                            android:checked="false"
                            android:buttonTint="@color/white"
                            android:textSize="12sp"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/font_medium"
                            android:textColor="@color/white"
                            android:text="@string/str_unmarried"/>


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/li_anniversary_date_box"
                android:layout_below="@id/li_marital_status_box"
                android:layout_width="match_parent"
                android:layout_marginVertical="@dimen/dim_5_dp"
                android:visibility="visible"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/li_anniversary_date"
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/dim_8_dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_que_married_date"
                        android:padding="5dp"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:layout_gravity="start"
                        android:fontFamily="@font/font_bold"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="@dimen/dim_8_dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/li_day_marriage_box"
                            android:layout_width="0dp"
                            android:layout_weight="4"
                            android:orientation="horizontal"
                            android:padding="@dimen/dim_5_dp"
                            android:gravity="center"
                            android:layout_marginEnd="@dimen/dim_5_dp"
                            android:background="@drawable/survey_round_edt_box"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/txt_day"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/str_day"
                                android:padding="@dimen/dim_5_dp"
                                android:fontFamily="@font/font_medium"
                                android:textSize="12sp"
                                android:textColor="@color/colorSurveyTextGreen"/>

                            <AutoCompleteTextView
                                android:id="@+id/auto_day_anniversary"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="10sp"
                                android:maxLength="2"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:backgroundTint="@color/white"
                                android:gravity="center|center_vertical"
                                android:layout_gravity="center_vertical"
                                android:focusableInTouchMode="false"
                                android:inputType="none"
                                tools:ignore="LabelFor"
                                android:padding="@dimen/dim_5_dp"
                                android:fontFamily="@font/font_medium"
                                android:textColor="@color/colorSurveyTextGreen"/>
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/down_arrow"
                                android:padding="@dimen/dim_5_dp"
                                android:layout_gravity="center_vertical"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/li_month_marriage_box"
                            android:layout_width="0dp"
                            android:layout_weight="4"
                            android:orientation="horizontal"
                            android:padding="@dimen/dim_5_dp"
                            android:gravity="center"
                            android:layout_marginEnd="@dimen/dim_5_dp"
                            android:background="@drawable/survey_round_edt_box"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/txt_month"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/str_month"
                                android:padding="@dimen/dim_5_dp"
                                android:fontFamily="@font/font_medium"
                                android:textSize="12sp"
                                android:textColor="@color/colorSurveyTextGreen"/>

                            <AutoCompleteTextView
                                android:id="@+id/auto_month_anniversary"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="10sp"
                                android:maxLength="2"
                                android:maxLines="1"
                                android:inputType="none"
                                android:padding="@dimen/dim_5_dp"
                                android:layout_gravity="center_vertical"
                                android:backgroundTint="@color/white"
                                android:focusableInTouchMode="false"
                                tools:ignore="LabelFor"
                                android:singleLine="true"
                                android:gravity="center|center_vertical"
                                android:fontFamily="@font/font_medium"
                                android:textColor="@color/colorSurveyTextGreen"/>
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/down_arrow"
                                android:padding="@dimen/dim_5_dp"
                                android:layout_gravity="center_vertical"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/li_year_marriage_box"
                            android:layout_width="0dp"
                            android:layout_weight="4"
                            android:orientation="horizontal"
                            android:padding="@dimen/dim_5_dp"
                            android:gravity="center"
                            android:background="@drawable/survey_round_edt_box"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/txt_year"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/str_year"
                                android:padding="@dimen/dim_5_dp"
                                android:fontFamily="@font/font_medium"
                                android:textSize="12sp"
                                android:textColor="@color/colorSurveyTextGreen"/>

                            <AutoCompleteTextView
                                android:id="@+id/auto_year_anniversary"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="10sp"
                                android:maxLength="4"
                                android:maxLines="1"
                                android:inputType="none"
                                android:singleLine="true"
                                android:layout_gravity="center_vertical"
                                android:backgroundTint="@color/white"
                                tools:ignore="LabelFor"
                                android:focusableInTouchMode="false"
                                android:gravity="center|center_vertical"
                                android:padding="@dimen/dim_5_dp"
                                android:fontFamily="@font/font_medium"
                                android:textColor="@color/colorSurveyTextGreen"/>
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/down_arrow"
                                android:padding="@dimen/dim_5_dp"
                                android:layout_gravity="center_vertical"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/img_anniversary_date"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:src="@drawable/birthday_cake"
                    android:layout_gravity="center_vertical|center"
                    android:fitsSystemWindows="true"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/li_living_status_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="@dimen/dim_5_dp">

                <ImageView
                    android:id="@+id/img_living_status"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:src="@drawable/employment"
                    android:layout_gravity="center_vertical|center"
                    android:fitsSystemWindows="true"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/dim_8_dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/rl_living_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str_heading_living_status"
                            android:padding="5dp"
                            android:textSize="16sp"
                            android:textColor="@color/white"
                            android:layout_alignParentEnd="true"
                            android:fontFamily="@font/font_bold"/>
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/li_living_status_cb"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatCheckBox
                            android:id="@+id/cb_own_house_li_status"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:checked="false"
                            android:padding="2dp"
                            android:layout_marginEnd="@dimen/dim_5_dp"
                            android:buttonTint="@color/white"
                            android:textSize="12sp"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/font_medium"
                            android:textColor="@color/white"
                            android:text="@string/str_own_house"/>

                        <androidx.appcompat.widget.AppCompatCheckBox
                            android:id="@+id/cb_ranted_li_status"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:padding="2dp"
                            android:checked="false"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="@dimen/dim_5_dp"
                            android:buttonTint="@color/white"
                            android:textSize="12sp"
                            android:fontFamily="@font/font_medium"
                            android:textColor="@color/white"
                            android:text="@string/str_ranted"/>

                        <androidx.appcompat.widget.AppCompatCheckBox
                            android:id="@+id/cb_lease_li_status"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:checked="false"
                            android:padding="2dp"
                            android:layout_gravity="center_vertical"
                            android:buttonTint="@color/white"
                            android:textSize="12sp"
                            android:fontFamily="@font/font_medium"
                            android:textColor="@color/white"
                            android:text="@string/str_lease"/>


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>