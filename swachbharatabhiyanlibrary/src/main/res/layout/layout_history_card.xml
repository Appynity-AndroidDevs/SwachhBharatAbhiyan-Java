<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dim_6_dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/menu_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/dim_2_dp"
        android:layout_marginTop="@dimen/dim_6_dp"
        android:layout_marginEnd="@dimen/dim_2_dp"
        android:layout_marginBottom="@dimen/dim_6_dp"
        app:cardCornerRadius="@dimen/dim_5_dp"
        app:cardElevation="@dimen/dim_3_dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dim_12_dp"
            android:paddingBottom="@dimen/dim_12_dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/history_date_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hyphen"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/dim_20_sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/history_month_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hyphen"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp" />

            </LinearLayout>

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dim_2_dp"
                android:layout_marginEnd="@dimen/dim_12_dp"
                android:background="@color/colorAccent"
                android:visibility="visible" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8">

                <TextView
                    android:id="@+id/house_collection_lbl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/house_collection_txt"
                    android:textColor="@color/colorDefault"
                    android:textSize="@dimen/dim_12_sp" />

                <TextView
                    android:id="@+id/house_collection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/house_collection_lbl"
                    android:layout_marginBottom="@dimen/dim_6_dp"
                    android:text="@string/hyphen"
                    android:textColor="@color/colorBlue"
                    android:textSize="@dimen/dim_17_sp" />

                <!--<TextView
                    android:id="@+id/gp_collection_lbl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/house_collection"
                    android:layout_marginTop="@dimen/dim_6_dp"
                    android:text="@string/point_collection_txt"
                    android:textColor="@color/colorDefault"
                    android:textSize="@dimen/dim_12_sp" />

                <TextView
                    android:id="@+id/gp_collection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/gp_collection_lbl"
                    android:textSize="@dimen/dim_17_sp"
                    android:textColor="@color/colorPinkLight"
                    android:text="@string/hyphen"/>-->

                <TextView
                    android:id="@+id/dy_collection_lbl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/house_collection"
                    android:layout_marginTop="@dimen/dim_6_dp"
                    android:text="@string/dump_yard_txt"
                    android:textColor="@color/colorDefault"
                    android:textSize="@dimen/dim_12_sp" />

                <TextView
                    android:id="@+id/dy_collection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dy_collection_lbl"
                    android:text="@string/hyphen"
                    android:textColor="@color/colorOrange"
                    android:textSize="@dimen/dim_17_sp" />

                <TextView
                    android:id="@+id/lwc_collection_lbl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dy_collection"
                    android:layout_marginTop="@dimen/dim_6_dp"
                    android:text="@string/lwc_title"
                    android:textColor="@color/colorDefault"
                    android:textSize="@dimen/dim_12_sp" />

                <TextView
                    android:id="@+id/lwc_collection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lwc_collection_lbl"
                    android:text="@string/hyphen"
                    android:textColor="@color/colorGreenLight"
                    android:textSize="@dimen/dim_17_sp" />
                <!--colorGreenLight-->

                <TextView
                    android:id="@+id/ss_collection_lbl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lwc_collection"
                    android:layout_marginTop="@dimen/dim_6_dp"
                    android:text="@string/street_collection"
                    android:textColor="@color/colorDefault"
                    android:textSize="@dimen/dim_12_sp" />

                <TextView
                    android:id="@+id/ss_collection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ss_collection_lbl"
                    android:text="@string/hyphen"
                    android:textColor="@color/colorPinkLight"
                    android:textSize="@dimen/dim_17_sp" />
                <TextView
                    android:id="@+id/ds_collection_lbl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ss_collection"
                    android:layout_marginTop="@dimen/dim_6_dp"
                    android:text="@string/dumpyard_plant_collection"
                    android:textColor="@color/colorDefault"
                    android:textSize="@dimen/dim_12_sp" />

                <TextView
                    android:id="@+id/ds_collection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ds_collection_lbl"
                    android:text="@string/hyphen"
                    android:textColor="@color/colorPinkLight"
                    android:textSize="@dimen/dim_17_sp" />
                <TextView
                    android:id="@+id/ctpt_collection_lbl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ds_collection"
                    android:layout_marginTop="@dimen/dim_6_dp"
                    android:text="@string/string_ctpt_collection"
                    android:textColor="@color/colorDefault"
                    android:textSize="@dimen/dim_12_sp" />

                <TextView
                    android:id="@+id/ctpt_collection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ctpt_collection_lbl"
                    android:text="@string/hyphen"
                    android:textColor="@color/colorPinkLight"
                    android:textSize="@dimen/dim_17_sp" />

            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
